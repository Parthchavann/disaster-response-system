# NEXUS Production Environment Configuration
# Real-Time Multimodal Disaster Intelligence System

# Environment
NODE_ENV=production
NEXUS_MODE=production
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8503
API_BASE_URL=http://localhost:9999

# Security
NEXUS_SECRET_KEY=CHANGE_THIS_SECURE_NEXUS_SECRET_KEY_IN_PRODUCTION
JWT_ALGORITHM=HS256

# Dashboard Configuration
DASHBOARD_TITLE=NEXUS: Real-Time Multimodal Disaster Intelligence System
DASHBOARD_UPDATE_INTERVAL=5000
ENABLE_LIVE_DATA=true
ENABLE_MOCK_DATA=true

# Monitoring
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=30
LOG_LEVEL=INFO

# Performance
MAX_CONCURRENT_CONNECTIONS=100
REQUEST_TIMEOUT=30
CACHE_ENABLED=true

# Features
ENABLE_AI_PREDICTIONS=true
ENABLE_REAL_TIME_CHARTS=true
ENABLE_EVENT_MONITORING=true
ENABLE_DISASTER_CLASSIFICATION=true

# Branding
BRAND_NAME=NEXUS
BRAND_TAGLINE=Real-Time Multimodal Disaster Intelligence
PRIMARY_COLOR=#1e3a8a
SECONDARY_COLOR=#7c3aed
ACCENT_COLOR=#06b6d4