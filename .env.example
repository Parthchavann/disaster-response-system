# RescueScope AI - Environment Configuration Template
# Copy this file to .env and configure your settings

# =======================
# SERVER CONFIGURATION
# =======================
RESCUESCOPE_HOST=0.0.0.0
RESCUESCOPE_PORT=8080
RESCUESCOPE_DEBUG=false

# =======================
# API CONFIGURATION
# =======================
USGS_API_TIMEOUT=30
CACHE_DURATION=300
MAX_EVENTS=1000
ALERT_THRESHOLD=5.5
HEALTH_CHECK_INTERVAL=60

# =======================
# EXTERNAL API KEYS
# =======================
# OpenAI API (optional for enhanced AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Weather API (optional for weather integration)
WEATHER_API_KEY=your_weather_api_key_here

# =======================
# DATABASE CONFIGURATION
# =======================
# Redis (optional for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =======================
# MONITORING CONFIGURATION
# =======================
# Prometheus metrics endpoint
ENABLE_METRICS=true
METRICS_PORT=9000

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =======================
# SECURITY CONFIGURATION
# =======================
# JWT Secret for authentication (generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here

# CORS origins (comma-separated)
CORS_ORIGINS=*

# =======================
# DEPLOYMENT CONFIGURATION
# =======================
# Environment (development, staging, production)
ENVIRONMENT=production

# Domain for public access
DOMAIN=rescuescope.your-domain.com

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/rescuescope.crt
SSL_KEY_PATH=/etc/ssl/private/rescuescope.key