# Testing Environment Configuration
# Disaster Response System

# Environment
ENVIRONMENT=testing
DEBUG=true

# API Configuration
API_HOST=127.0.0.1
API_PORT=8001
API_WORKERS=1

# Authentication (test keys)
JWT_SECRET_KEY=test-disaster-response-secret-key-for-testing-only
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=1

# Database Configuration (use separate test databases)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=disaster_events_test

# Kafka Configuration (test topics)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPICS=test.disaster.social.text,test.disaster.social.images,test.disaster.weather.sensors,test.disaster.satellite.data
KAFKA_GROUP_ID=disaster-response-consumer-test
KAFKA_AUTO_OFFSET_RESET=earliest

# MLflow Configuration
MLFLOW_TRACKING_URI=sqlite:///test_mlruns.db
MLFLOW_EXPERIMENT_NAME=disaster-response-test
MLFLOW_ARTIFACT_ROOT=./test_mlruns

# Model Configuration (use smaller models for testing)
MODEL_CACHE_DIR=./test_models
TEXT_MODEL_NAME=distilbert-base-uncased
IMAGE_MODEL_NAME=resnet18
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Feature Engineering (mock APIs for testing)
WEATHER_API_KEY=test_weather_api_key
WEATHER_API_URL=http://localhost:8002/mock/weather

# Social Media APIs (mock for testing)
TWITTER_API_KEY=test_twitter_api_key
TWITTER_API_SECRET=test_twitter_api_secret
TWITTER_ACCESS_TOKEN=test_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=test_twitter_access_token_secret

# News APIs (mock for testing)
NEWS_API_KEY=test_news_api_key
NEWS_API_URL=http://localhost:8002/mock/news

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/disaster-response-test.log

# Performance Tuning (smaller for tests)
MAX_WORKERS=2
BATCH_SIZE=4
PREDICTION_TIMEOUT=60
CACHE_TTL=300

# Security (relaxed for testing)
CORS_ORIGINS=*
ALLOWED_HOSTS=*

# Monitoring (disabled for testing)
PROMETHEUS_PORT=9091
GRAFANA_PORT=3001
ENABLE_METRICS=false

# Data Simulation (enabled for testing)
ENABLE_DATA_SIMULATION=true
SIMULATION_INTERVAL_SECONDS=1
SIMULATION_EVENT_RATE=1.0

# Test-specific settings
RUN_SLOW_TESTS=false
TEST_DATABASE_URL=sqlite:///test_disaster_response.db
MOCK_EXTERNAL_APIS=true
GENERATE_TEST_DATA=true