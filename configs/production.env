# Production Environment Configuration
# Disaster Response System

# Environment
ENVIRONMENT=production
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Authentication (CHANGE THESE IN PRODUCTION!)
JWT_SECRET_KEY=CHANGE_THIS_SECURE_SECRET_KEY_IN_PRODUCTION
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
REDIS_HOST=redis-cluster.disaster-response.internal
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_SSL=true

# Vector Database (Qdrant)
QDRANT_HOST=qdrant.disaster-response.internal
QDRANT_PORT=6333
QDRANT_API_KEY=CHANGE_THIS_QDRANT_API_KEY
QDRANT_COLLECTION_NAME=disaster_events_prod

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka-cluster-1.disaster-response.internal:9092,kafka-cluster-2.disaster-response.internal:9092,kafka-cluster-3.disaster-response.internal:9092
KAFKA_TOPICS=disaster.social.text,disaster.social.images,disaster.weather.sensors,disaster.satellite.data
KAFKA_GROUP_ID=disaster-response-consumer-prod
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=disaster-response
KAFKA_SASL_PASSWORD=CHANGE_THIS_KAFKA_PASSWORD

# MLflow Configuration
MLFLOW_TRACKING_URI=postgresql://mlflow:CHANGE_PASSWORD@mlflow-db.disaster-response.internal:5432/mlflow
MLFLOW_EXPERIMENT_NAME=disaster-response-production
MLFLOW_ARTIFACT_ROOT=s3://disaster-response-mlflow-artifacts/

# Model Configuration
MODEL_CACHE_DIR=/app/models
TEXT_MODEL_NAME=distilbert-base-uncased
IMAGE_MODEL_NAME=resnet50
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Feature Engineering
WEATHER_API_KEY=CHANGE_THIS_OPENWEATHER_API_KEY
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Social Media APIs (for real data integration)
TWITTER_API_KEY=CHANGE_THIS_TWITTER_API_KEY
TWITTER_API_SECRET=CHANGE_THIS_TWITTER_API_SECRET
TWITTER_ACCESS_TOKEN=CHANGE_THIS_TWITTER_ACCESS_TOKEN
TWITTER_ACCESS_TOKEN_SECRET=CHANGE_THIS_TWITTER_ACCESS_TOKEN_SECRET

# News APIs
NEWS_API_KEY=CHANGE_THIS_NEWS_API_KEY
NEWS_API_URL=https://newsapi.org/v2

# Government APIs
USGS_API_URL=https://earthquake.usgs.gov/fdsnws/event/1/query
NOAA_API_KEY=CHANGE_THIS_NOAA_API_KEY
NOAA_API_URL=https://www.ncdc.noaa.gov/cdo-web/api/v2

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/var/log/disaster-response/app.log

# Performance Tuning
MAX_WORKERS=16
BATCH_SIZE=64
PREDICTION_TIMEOUT=10
CACHE_TTL=1800

# Security
CORS_ORIGINS=https://dashboard.disaster-response.com,https://api.disaster-response.com
ALLOWED_HOSTS=disaster-response.com,api.disaster-response.com,dashboard.disaster-response.com

# Cloud Provider Configuration
CLOUD_PROVIDER=aws
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_THIS_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_THIS_AWS_SECRET_KEY
S3_BUCKET=disaster-response-data-prod

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ENABLE_METRICS=true
SENTRY_DSN=CHANGE_THIS_SENTRY_DSN

# Alerting
SLACK_WEBHOOK_URL=CHANGE_THIS_SLACK_WEBHOOK
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=alerts@disaster-response.com
EMAIL_PASSWORD=CHANGE_THIS_EMAIL_PASSWORD

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/disaster-response.crt
SSL_KEY_PATH=/etc/ssl/private/disaster-response.key

# Data Simulation (disabled in production)
ENABLE_DATA_SIMULATION=false