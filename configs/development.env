# Development Environment Configuration
# Disaster Response System

# Environment
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Authentication
JWT_SECRET_KEY=dev-disaster-response-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=disaster_events

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPICS=disaster.social.text,disaster.social.images,disaster.weather.sensors,disaster.satellite.data
KAFKA_GROUP_ID=disaster-response-consumer
KAFKA_AUTO_OFFSET_RESET=latest

# MLflow Configuration
MLFLOW_TRACKING_URI=sqlite:///mlruns.db
MLFLOW_EXPERIMENT_NAME=disaster-response-dev
MLFLOW_ARTIFACT_ROOT=./mlruns

# Model Configuration
MODEL_CACHE_DIR=./trained_models
TEXT_MODEL_NAME=distilbert-base-uncased
IMAGE_MODEL_NAME=resnet50
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Feature Engineering
WEATHER_API_KEY=your_openweather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Social Media APIs (for real data integration)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# News APIs
NEWS_API_KEY=your_news_api_key_here
NEWS_API_URL=https://newsapi.org/v2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/disaster-response-dev.log

# Performance Tuning
MAX_WORKERS=4
BATCH_SIZE=32
PREDICTION_TIMEOUT=30
CACHE_TTL=3600

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,http://127.0.0.1:3000,http://127.0.0.1:8501
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ENABLE_METRICS=true

# Data Simulation (for development)
ENABLE_DATA_SIMULATION=true
SIMULATION_INTERVAL_SECONDS=10
SIMULATION_EVENT_RATE=0.1